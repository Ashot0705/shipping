<table>
	<thead>
		<tr>
			<th>Description</th>
			<th>Origin</th>	
			<th>Destination</th>	
			<th>Quantity</th>	
			<th>Cost</th>
			<th>Boats</th>	
		</tr>
	</thead>

	<tbody>

		<tr>
			<td><h4> <%= @job.description %> </h4></td>
			<td><h4> <%= @job.origin %> </h4></td>
			<td><h4> <%= @job.destination %> </h4></td>
			<td><h4> <%= @job.quantity %> </h4></td>
			<td><h4> <%= number_to_currency@job.cost %> </h4></td>
			<td><h4> <%= @job.boats.map(&:name).join(", ") %></h4></td>
	
			<td><h4> <%= link_to "delete", job_path, method: :delete %> </h4></td>
			<td><h4> <%= link_to "Edit", edit_job_path %></h4></td>

		</tr>
	</tbody>
</table>	

<%= form_tag("/select-boat") do %>
	<%= select_tag "boat_id", options_for_select(Boat.where(location: @job.origin).map { |boat| [boat.name, boat.id]}) %>
	<%= hidden_field_tag "job_id", @job.id %>
	<%= submit_tag "Submit", :disable_with => 'Submiting...' %>
<% end %>

<% if @job.boats.empty? %>
	<div class="create_button"> <%= link_to "create a boat", new_boat_path %>
	</div>
<% end %>

	<div class="but">
		<button type="button">create me</button>
	</div>


<div class="modal">
	<%= form_tag("/sam") do %>

		<%= label_tag "name" %>
		<%= text_field_tag "name" %>
		<%= flash[:alert] if flash[:alert] %>
		<br>
		<br>

		<%= label_tag "location" %>
		<%= select_tag "location", options_for_select([ "Miami", "Los Angeles", "New York", "Houston", "Newark", "Tampa", "Seattle" ]), :prompt => "Select Location" %>
		<br>
		<br>

		<%= hidden_field_tag "job_id", value: @job.id %>

		<%= label_tag "quantity" %>
		<%= text_field_tag "quantity" %>
		<br>
		<br>

		<%= submit_tag "Create a boat" %>

	<% end %>
</div>




